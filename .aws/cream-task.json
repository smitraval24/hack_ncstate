{
    "containerDefinitions": [
        {
            "name": "cream-container",
            "image": "244996607989.dkr.ecr.us-east-1.amazonaws.com/creamandonion@sha256:f244a23eda1fd19590cbae6a13393d9d19d444e720cf9adab6fd2c53f8e077eb",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "cream-container-8000-tcp",
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            },
            "environment": [
                { "name": "POSTGRES_HOST", "value": "localhost" },
                { "name": "POSTGRES_PORT", "value": "5432" },
                { "name": "POSTGRES_USER", "value": "hello" },
                { "name": "POSTGRES_PASSWORD", "value": "password" },
                { "name": "POSTGRES_DB", "value": "hello" },
                { "name": "MOCK_API_BASE_URL", "value": "http://localhost:5001" },
                { "name": "CLOUDWATCH_ENABLED", "value": "true" },
                { "name": "AWS_REGION", "value": "us-east-1" },
                { "name": "CLOUDWATCH_LOG_GROUPS", "value": "/aws/lambda/FaultRouter" },
                { "name": "CLOUDWATCH_ONLY_FAULT_CODES", "value": "true" },
                { "name": "CLOUDWATCH_FAULT_CODES", "value": "FAULT_SQL_INJECTION_TEST,FAULT_EXTERNAL_API_LATENCY,FAULT_DB_TIMEOUT" },
                { "name": "CLOUDWATCH_LOOKBACK_MINUTES", "value": "240" },
                { "name": "CLOUDWATCH_LIMIT_PER_GROUP", "value": "200" },
                { "name": "CLOUDWATCH_FILTER_PATTERN", "value": "" },
                { "name": "NODE_ENV", "value": "production" }
            ],
            "dependsOn": [
                { "containerName": "postgres", "condition": "HEALTHY" }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/cream-task",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "postgres",
            "image": "244996607989.dkr.ecr.us-east-1.amazonaws.com/hack-postgres:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                { "name": "POSTGRES_USER", "value": "hello" },
                { "name": "POSTGRES_PASSWORD", "value": "password" },
                { "name": "POSTGRES_DB", "value": "hello" }
            ],
            "healthCheck": {
                "command": ["CMD-SHELL", "pg_isready -U hello"],
                "interval": 10,
                "timeout": 5,
                "retries": 5,
                "startPeriod": 60
            },
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/cream-task",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "postgres"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "mock-api",
            "image": "244996607989.dkr.ecr.us-east-1.amazonaws.com/mock-api:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 5001,
                    "hostPort": 5001,
                    "protocol": "tcp"
                }
            ],

        
            "essential": false,
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "python -c \"import urllib.request; urllib.request.urlopen('http://localhost:5001/health', timeout=3).read()\" || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            },
            "environment": [
                { "name": "API_FAULT_MODE", "value": "latency,error" }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/cream-task",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "mock-api"
                },
                "secretOptions": []
            },
            "systemControls": []
        }
    ],
    "family": "cream-task",
    "taskRoleArn": "arn:aws:iam::244996607989:role/cream-task-role",
    "executionRoleArn": "arn:aws:iam::244996607989:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "3072",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}
